<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="16dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/headline_image"
        android:layout_width="300dp"
        android:layout_height="170dp"
        fresco:placeholderImage="@drawable/placeholder" />

    <TextView
        android:id="@+id/headline_article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="9sp"
        android:paddingTop="8dp"
        android:textColor="@color/headline_article_title_color"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Obituary: Stephen Hawking" />

    <TextView
        android:id="@+id/headline_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="4dp"
        android:textColor="@color/headline_source_color"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Bbc.com" />

    <TextView
        android:id="@+id/headline_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="7sp"
        android:paddingTop="4dp"
        android:textColor="@color/headline_time_color"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="2 hours ago" />

</LinearLayout>